{{!--motor de plantilla de Handlebars--}}
<div>
    <h1>hola {{name}}</h1>

    <h3>LISTA DE PRODUCTOS</h3>

    <table>
        <thead>
            <tr>

                <th>id</th>
                <th>title</th>
                <th>description</th>
                <th>price</th>
                <th>thumbnail</th>
                <th>code</th>
                <th>stock</th>
                <th>category</th>
                <th>status</th>
            </tr>

        </thead>


        <tbody>

            {{#each productos}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>

                <td>

                    {{#if this.thumbnail.length}}
                    <a href="{{this.thumbnail.[0]}}" target="_blank">{{this.thumbnail.[0]}}</a>
                    {{else}}
                    No hay imagen del Prod.

                    {{/if}}
                </td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>

                    {{#if this.status}}
                    Prod.Activo
                    {{else}}
                    Prod.Desactivo
                    {{/if}}
                </td>



            </tr>

            {{/each}}
        </tbody>

    </table>
</div>